<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="user-scalable=no, width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/leftsidebar.css" rel="stylesheet">
    <link href="~/Content/theme.css" rel="stylesheet" />
    <script src="~/Scripts/modernizr-2.8.3.js"></script>
    <script src="~/Scripts/jquery-3.1.0.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</head>
<body id="body">
    <!-- TOP NAVBAR START -->
    <div class="navbar navbar-inverse navbar-fixed-top">
        @Html.ActionLink("Application name", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
        <div class="container">
            <div class="navbar-header mobileonly">
                <img src="/Content/menu-icon.svg" class="menu-icon" data-toggle="collapse" data-target=".navbar-collapse" style="float: right; margin-top: 10px" />
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>
                        @Html.ActionLink("Home", "Index", "Home")
                    </li>
                    <li>
                        @Html.ActionLink("Contact", "Index", "Contact")
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <!-- TOP NAVBAR END -->

    <div id="wrapper">
        <!-- LEFT SIDEBAR START -->
        <div id="sidebar-wrapper">
            <ul class="sidebar-nav">
                <li style="text-align: right">
                    <img src="/Content/menu-icon.svg" class="menu-icon" id="menu-toggle" />
                </li>
                <li>
                    <!-- PUT BUTTON HERE -->
                </li>
                @RenderSection("leftsidebar", true)
            </ul>
        </div>
        <!-- LEFT SIDEBAR END -->
        <!-- PAGE CONTENT START -->
        <div id="page-content-wrapper">
            <div class="container-fluid">
                @RenderBody()
            </div>
        </div>
        <!-- PAGE CONTENT END -->
    </div>

    <script>

        $("#menu-toggle").click(function (e) {
            e.preventDefault();
            $("#wrapper").toggleClass("toggled");
        });

        $(document).on("click", ".sidebar-nav li a", function (e) {
            e.preventDefault();

            $("body").append("<div id='fullscreenoverlay'><div class='loader'>Loading...</div></div>");
            $("#page-content-wrapper > .container-fluid").html("");

            var url = $(this).attr("href");
            history.pushState(null, null, url);
            
            if (url.indexOf("?") === -1) {
                url += "?";
            }
            else {
                url += "&";
            }
            url += "ajax=true";

            $.ajax({
                url: $(this).attr("href") + "/?ajax=true"
            }).done(function (data) {
                $("#fullscreenoverlay").remove();
                $("#page-content-wrapper > .container-fluid").html(data);
            });

        });

        $(document).on("submit", "form", function (e) {
            e.preventDefault();

            $("body").append("<div id='fullscreenoverlay'><div class='loader'>Loading...</div></div>");
            $("#page-content-wrapper > .container-fluid").html("");

            var method = "GET";
            if ($(this).attr("method") !== undefined && $(this).attr("method").toUpperCase() === "POST") {
                method = "POST";
            }

            var action = location.pathname;
            if ($(this).attr("action") !== undefined) {
                action = $(this).attr("action");
            }
            history.pushState(null, null, action);

            if (action.indexOf("?") === -1) {
                action += "?";
            }
            else {
                action += "&";
            }
            action += "ajax=true";

            $.ajax({
                url: action,
                method: method,
                data: $(this).serialize()
            }).done(function (data) {
                $("#fullscreenoverlay").remove();
                $("#page-content-wrapper > .container-fluid").html(data);
            });
        });
    </script>
</body>
</html>