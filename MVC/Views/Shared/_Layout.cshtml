<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="user-scalable=no, width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/signalr")
    @Scripts.Render("~/bundles/bootstrap")
</head>
<body id="body">
    <!-- TOP NAVBAR START -->
    <div class="navbar navbar-inverse navbar-fixed-top">
        @Html.ActionLink("Application name", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
        <div class="container">
            <div class="navbar-header mobileonly">
                <img src="/Content/menu-icon.svg" class="menu-icon" data-toggle="collapse" data-target=".navbar-collapse" style="float: right; margin-top: 10px" />
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>
                        @Html.ActionLink("Home", "Index", "Home")
                    </li>
                    <li>
                        @Html.ActionLink("Chat", "Index", "Chat")
                    </li>
                    <li>
                        @Html.ActionLink("Contact", "Index", "Contact")
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <!-- TOP NAVBAR END -->

    <div id="wrapper">
        <!-- LEFT SIDEBAR START -->
        <div id="sidebar-wrapper">
            <ul class="sidebar-nav">
                <li style="text-align: right">
                    <img src="/Content/menu-icon.svg" class="menu-icon" id="menu-toggle" />
                </li>
            </ul>
        </div>
        <!-- LEFT SIDEBAR END -->
        <!-- PAGE CONTENT START -->
        <div id="page-content-wrapper">
            @RenderBody()
        </div>
        <!-- PAGE CONTENT END -->
    </div>

    <script>
        function SidebarMenu() {
            $("#page-content-wrapper > a[title != ''][name != '']").each(function (anchor_index, anchor_object) {
                $("#sidebar-wrapper > ul.sidebar-nav").append("<li><a href='#" + $(anchor_object).attr("name") + "'>" + $(anchor_object).attr("title") + "</a></li>")
            })
        }

        $(document).ready(function () {
            SidebarMenu();
        })

        $("#menu-toggle").click(function (e) {
            e.preventDefault();
            $("#wrapper").toggleClass("toggled");
        });

        $(document).on("submit", "form", function (e) {
            e.preventDefault();

            var method = "GET";
            if ($(this).attr("method") !== undefined && $(this).attr("method").toUpperCase() === "POST") {
                method = "POST";
            }

            var action = location.pathname;
            if ($(this).attr("action") !== undefined) {
                action = $(this).attr("action");
            }

            $.ajax({
                url: action,
                method: method,
                data: "X-Requested-With=XMLHttpRequest" + $(this).serialize(),
                crossdomain: false
            }).done(function (data) {
                history.pushState(null, null, action);
                $("#page-content-wrapper > .container-fluid").html(data);
            });
        });
    </script>
</body>
</html>